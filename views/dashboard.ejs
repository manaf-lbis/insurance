<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Insurance Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/dashboard.css">
   
</head>
<body>
    <div class="container-fluid px-5">
        <h1>Insurance Management Dashboard</h1>

        <!-- Cards Section -->
        <div class="row">
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="card">
                    <div class="card-header near-expiry">
                        <i class="bi bi-clock-history"></i> Near Expiry
                    </div>
                    <div class="card-body">
                        <h2 class="card-text" id="near-expiry-count">5</h2>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="card">
                    <div class="card-header expired">
                        <i class="bi bi-exclamation-circle"></i> Expired
                    </div>
                    <div class="card-body">
                        <h2 class="card-text" id="expired-count">3</h2>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="card">
                    <div class="card-header total-insurance">
                        <i class="bi bi-folder-check"></i> Total Insurance
                    </div>
                    <div class="card-body">
                        <h2 class="card-text" id="total-insurance-count">20</h2>
                    </div>
                </div>
            </div>
        </div>

        <!-- Action Buttons in the Header Section -->
        <div class="card mb-5">
            <div class="card-header">
                <h5 class="mb-0 d-flex justify-content-between">
                    <span>All Insurance Policies</span>
                    <div class="action-buttons">
                        <button class="btn btn-primary btn-sm btn-filter rounded-2" id="filter-button"><i class="bi bi-filter"></i> Filter</button>
                        <button class="btn btn-success btn-sm btn-add-insurance rounded-2" data-bs-toggle="modal" data-bs-target="#addInsuranceModal"><i class="bi bi-plus-circle"></i> Add Insurance</button>
                    </div>
                </h5>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Name</th>
                                <th>Reg No</th>
                                <th>Phone</th>
                                <th>Start Date</th>
                                <th>End Date</th>
                                <th>Status</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody id="tableBody">
                            <!-- 15 Dummy Rows for Testing -->
                            <tr>
                                <td>1</td>
                                <td>John Doe</td>
                                <td>Kl-230-hsd</td>
                                <td>1234567890</td>
                                <td>01/01/2023</td>
                                <td>01/01/2024</td>
                                <td>Active</td>
                                <td>
                                    <button class="btn btn-warning btn-sm rounded-2"><i class="bi bi-bell"></i> Send Reminder</button>
                                    <button class="btn btn-danger btn-sm rounded-2"><i class="bi bi-trash"></i> Delete</button>
                                </td>
                            </tr>
                           
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal -->
    <div class="modal fade" id="addInsuranceModal" tabindex="-1" aria-labelledby="addInsuranceModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="addInsuranceModalLabel">Add Insurance Policy</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <!-- Form for adding insurance policy -->
                    <form>
                        <div class="mb-3">
                            <label for="policyName" class="form-label">Policy Name</label>
                            <input type="text" class="form-control" id="policyName" required>
                        </div>
                        <div class="mb-3">
                            <label for="policyNumber" class="form-label">Policy Number</label>
                            <input type="text" class="form-control" id="policyNumber" required>
                        </div>
                        <div class="mb-3">
                            <label for="policyStartDate" class="form-label">Start Date</label>
                            <input type="date" class="form-control" id="policyStartDate" required>
                        </div>
                        <div class="mb-3">
                            <label for="policyEndDate" class="form-label">End Date</label>
                            <input type="date" class="form-control" id="policyEndDate" required>
                        </div>
                        <div class="mb-3">
                            <label for="policyStatus" class="form-label">Status</label>
                            <select class="form-select" id="policyStatus" required>
                                <option value="active">Active</option>
                                <option value="expired">Expired</option>
                                <option value="near-expiry">Near Expiry</option>
                            </select>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary">Add Policy</button>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
